package at.itp_uno_wifi_provider;

import android.app.Activity;
import android.content.ComponentName;
import android.content.ServiceConnection;
import android.os.IBinder;
import android.os.RemoteException;
import android.util.Log;
import at.itp_uno_wifi_provider.Service_WifiAdmin.Binder_Service_WifiAdmin;
import at.itp_uno_wifi_provider.activity.Activity_ServerGame;

public class ServiceConnection_Service_WifiAdmin implements ServiceConnection {
	private Activity _activity;
	
	public ServiceConnection_Service_WifiAdmin(Activity a){
		_activity = a;
		
	}
	
	@Override
	public void onServiceConnected(ComponentName name, IBinder service) {
			Log.i("Activity","onServiceConnected");
			if(service instanceof Binder_Service_WifiAdmin && _activity instanceof Activity_ServerGame){
				Log.i("Activity","onServiceConnected --> it is");
				((Activity_ServerGame) _activity).setIBinder((Binder_Service_WifiAdmin) service);
			}
	}

	@Override
	public void onServiceDisconnected(ComponentName arg0) {
		// TODO Auto-generated method stub
		
	}

}
